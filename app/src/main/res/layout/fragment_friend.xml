<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".friend_pac.Friend">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/pink"
        android:gravity="center"
        android:text="Friend"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <SearchView
        android:id="@+id/history_searchView"
        android:layout_width="389dp"
        android:layout_height="46dp"
        android:layout_above="@+id/friend_recycleView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/friend_search_view" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </SearchView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friend_recycleView"
        android:layout_width="match_parent"
        android:layout_height="446dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_friend_button"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_below="@+id/history_searchView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="355dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="194dp"
        android:background="#3498db"
        android:clickable="true"
        android:src="@drawable/baseline_add_circle_24"
        android:textColor="#ffffff"
        app:elevation="6dp"
        app:rippleColor="#E91E63" />


</RelativeLayout>